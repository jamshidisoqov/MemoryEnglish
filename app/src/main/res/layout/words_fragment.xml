<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.words.WordsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_word"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/card_corner"
        android:layout_marginTop="@dimen/card_corner"
        android:layout_marginEnd="@dimen/card_corner"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/rcv_word_item" />

    <TextView
        android:id="@+id/tv_word_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Words not existent"
        android:layout_centerInParent="true"/>
</RelativeLayout>